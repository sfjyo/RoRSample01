<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container-fluid">
<%= link_to "sample app", root_path, class: 'navbar-brand' %>
<% if logged_in? %>
<%= link_to "Users", user_path(current_user), class: 'nav-link' %>
<%= link_to "Profile", current_user, class: 'dropdown-item' %>
<%= link_to "Settings", edit_user_path(current_user), class: 'dropdown-item' %>
<%= button_to "Log out", logout_path, class: 'dropdown-item', method: :delete %>
<% else %>
<%= link_to "Log in", login_path %>
<% end %>
</div>
</header>
